// var api = require('remoteAPI');
var memSave = require('favorites');

// created tab group
var theTabs = Ti.UI.createTabGroup();

// created character tab and toon window
var toonWin = Ti.UI.createWindow({
	title : 'Council of Judgement Members',
	backgroundColor : '#fff'
});

var toonLink = Ti.UI.createView({
	bottom : '0dp',
	width : '175dp',
	height : '60dp',
	left : '0dp',
	backgroundColor : '#00008D',
	image : 'toon.png',
	url : 'remoteAPI.js'
});

var toonText = Ti.UI.createLabel({
	text : 'Members',
	font : {
		fontStyle : 'Helvetica',
		fontSize : '10dp'
	},
	color : '#fff'
});
toonLink.add(toonText);
toonWin.add(toonLink);

var toonTab = Ti.UI.createTab({
	image : 'toon.png',
	title : 'Council Members',
	window : toonWin
});

// created favorite tab and fav window

var favTab = Ti.UI.createTab({
	image : 'fav.png',
	title : 'Favorite Members',
	window : memSave.fWin
});

var close = function() {
	toonWin.close();

};

favTab.addEventListener('click', close);
//Main Code
theTabs.addTab(toonTab);
theTabs.addTab(favTab);
theTabs.open(); 