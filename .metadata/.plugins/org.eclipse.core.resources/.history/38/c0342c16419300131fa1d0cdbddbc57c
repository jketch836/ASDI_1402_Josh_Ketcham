var mWin = Ti.UI.createWindow({
	backgroundColor: "#fff"
});

var view = Ti.UI.createView({
	top:20,
	height:'auto',
	width: 'auto',
	backgroundColor: "#333"
});

var pic = Ti.UI.createImageView({
	top: '40dp',
	height: '200dp',
	width: '300dp',
	image: 'guild_pic.jpg'
});


var user = Ti.UI.createTextField({
    top:'250dp',
    left:10,    
    height:40,
    width:300,
    color:'#000',    
    hintText:'Username',
    value: '',
    font:{fontSize:15, fontWeight:'bold', fontFamily:'Helvetica'},
});

var pass = Ti.UI.createTextField({
    top:'300dp',
    left:10,
    height:40,
    width:300,
    color:'#000',
    hintText:'Password',
    passwordMask: true,
    value: '',
    font:{fontSize:15, fontWeight:'bold', fontFamily:'Helvetica'},
});

//Sign In
var signInView = Ti.UI.createView({
	backgroundImage: "edited/The_Iron_Throne_crop.jpg",
	borderRadius: 10,
	height: 35,
	top: '340dp',
	left: 10,
	right: 10,
	file: 'main_menu.js'
});

var signInLabel = Ti.UI.createLabel({
	text: "Enter",
	font: {fontSize: 14, fontFamily: "Helvetica", fontWeight: "bold"},
	color: "#000",
	center: 0,
	file: 'main_menu.js'
});
signInView.add(signInLabel);
 
signInView.addEventListener('click', function(){
	// if (user.value != '' & pass.value != ''){
		// var alertDialog = Ti.UI.createAlertDialog({
        	// title: 'Login Successful',
        	// buttonNames: ['OK']
   		// });
   		var mainWindow = Titanium.UI.createWindow({  
			title:'Main Menu',
			backgroundColor:'#fff',
			url:'main_menu.js'
		});
		mainWindow.open(mainWindow, {animate: true});
		// alertDialog.show();
	// } else {
		// var alertDialogPTA = Ti.UI.createAlertDialog({
    		// title: 'Please try agin',
        	// buttonNames: ['OK']
    	// });	
    	// alertDialogPTA.show();
	// }
});

//Main Code
view.add(pic, user, pass, signInView);
mWin.add(view);
mWin.open();