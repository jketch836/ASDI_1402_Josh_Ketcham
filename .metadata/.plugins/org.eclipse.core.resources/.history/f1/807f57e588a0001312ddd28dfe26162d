var comdata = Ti.Database.open('words');
var comData = Ti.App.Properties.getString('comData');
comData.execute('CREATE TABLE IF NOT EXISTS words (id INTEGER PRIMARY KEY, comment TEXT)');


function insertedData() {
	var commentInfo = [];

	var comInfo = comData.execute('SELECT * FROM words');

	while (comInfo.isValidRow()) {
		var comment = comInfo.fieldByName('comment');
		var id = comInfo.fieldByName('id');

		commentInfo.push({
			title : comment,
			id : id
		});

		// Ti.API.info('End row ' + id + ' look');
// 
		// Ti.API.info('=========================');

		comInfo.next();
	};
	return commentInfo;
};
var comm = insertedData();
exports.comm = comm;

// console.log(guildData);


var saveFunc = function() {
	input = {};
	input.com = comment;
	comData.execute('INSERT INTO words (comment) VALUES (?)', input.com);
};
exports.saveFunc = saveFunc;


exports.select = function(a) {
	var id = a.rowData.id;
	input = {};
	input.com = comment;
	input.id = id;
	comData.execute('SELECT * FROM words WHERE ID=?', id);
};


function editFunc() {
	input = {};
	input.com = comment;
	input.id = id;
	comData.execute('UPDATE words SET comment WHERE id=?', input.com); 
	comm;
};
exports.edit = editFunc;


function delFunc() {
	comData.execute('DELETE FROM words WHERE id=?', id); 
	comm;
};
exports.del = delFunc;